            //$(".signup_form").css('opacity', '100');


            //$("#card").flip(true);

            //return false;
        });

        $("#unflip-btn").click(function () {

            window.location.href = "/Account/Login";
            //$(".signin_form").css('opacity', '100');
            //$(".signup_form").css('opacity', '0');

            //$("#card").flip(false);

            //return false;

        });

        function retryTest(id) {
            window.location.href = "/Student/Tests/" + id;
        }

        function lessonPartial(id) {
            $('#lesson-container').empty();
            $('#lesson-container').append("<div class='loader'></div>")
            $('#lesson-container').load("/Student/Lesson/" + id);

        }
        function sendRequest(tid) {
            $.ajax({
                type: "POST",
                url: "/Manage/SendRequest",
                data: { tId: tid, subId: $("#SubjectId").val() },
                success: function (data) {
                    alert("Request was sent")
                },
                failure: function () {
                    alert("Failed!");
                }
            });
        }

        function GetDropDownData() {
            $.ajax({
                type: "POST",
                url: "/Home/RefreshModule",
                data: { sId: $('#SubjectId').val() },
                success: function (data) {
                    $('.module').remove();
                    $.each(data, function () {
                        $("#ModuleId").append($('<option class="module"     />').val(this.Id).text(this.Name));
                    });
                },
                failure: function () {
                    alert("Failed!");
                }
            });
        }

        function OnSuccess(response) {

            alert(response);
        }
        function OnFailure(response) {
            alert("Error occured.");
        }
    </script>
