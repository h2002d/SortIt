    <script type="text/javascript">

        $(document).ready(function () {
            var scroll_pos = 0;
            var scroll_pos_default = $(this).scrollTop();
            if (scroll_pos_default > 0) {
                $(".navbar-custom").css('background-color', '#fff');
                $(".navbar-nav").find('li').find('a').css('color', '#716F74');
                $(".navbar-custom").css('box-shadow', '0px 0px 8px 2px rgba(0, 0, 0, 0.5)');
                $('#menu-logo').attr('src','/images/logo.png');
            } else {
                $(".navbar-custom").css('background-color', 'transparent');
                $(".navbar-nav").find('li').find('a').css('color', '#fff');
                $(".navbar-custom").css('box-shadow', 'none');
                $('#menu-logo').attr('src','/images/logox.png');
            }
            $(window).scroll(function () {
                scroll_pos = $(this).scrollTop();

                if (scroll_pos > 0) {
                    $(".navbar-custom").css('background-color', '#fff');
                    $(".navbar-nav").find('li').find('a').css('color', '#716F74');
                    $(".navbar-custom").css('box-shadow', '0px 0px 8px 2px rgba(0, 0, 0, 0.5)');
                    $('#menu-logo').attr('src', '/images/logo.png');
                } else {
                    $(".navbar-custom").css('background-color', 'transparent');
                    $(".navbar-nav").find('li').find('a').css('color', '#fff');
                    $(".navbar-custom").css('box-shadow', 'none');
                    $('#menu-logo').attr('src', '/images/logox.png');
                }
            });
            $("#test-circle").circliful({
                animation: 1,
                animationStep: 2,
                foregroundBorderWidth: 5,
                backgroundBorderWidth: 5,
                percent: 12,
                textSize: 12,
                textStyle: 'font-size: 12px;',
                textColor: '#666',
                replacePercentageByText: '12 Teacher'
            });
            $("#test-circle1").circliful({
                animation: 1,
                animationStep: 2,
                foregroundBorderWidth: 5,
                backgroundBorderWidth: 5,
                percent: 87,
                textSize: 12,
                textStyle: 'font-size: 12px;',
                textColor: '#666',
                replacePercentageByText: '329 Learner'
            });
            $("#test-circle2").circliful({
                animation: 1,
                animationStep: 2,
                foregroundBorderWidth: 5,
                backgroundBorderWidth: 5,
                percent: 60,
                textSize: 12,
                textStyle: 'font-size: 12px;',
                textColor: '#666',
                replacePercentageByText: '124 Lessons'
            });
            $("#test-circle3").circliful({
                animation: 1,
                animationStep: 2,
                foregroundBorderWidth: 5,
                backgroundBorderWidth: 5,
                percent: 60,
                textSize: 12,
                textStyle: 'font-size: 12px;',
                textColor: '#666',
                replacePercentageByText: '124 Quizes'
            });
            $('.skillContainer input:checkbox').change(function () {
                if ($(this).parent().find('input:checkbox:checked').length == $(this).parent().find('input:checkbox').length) {
                    $(this).parent().parent().find('.skillSubject').prop('checked', true);
                }
                else {
                    $(this).parent().parent().find('.skillSubject').prop('checked', false);
                }
            });

            $('.checkBoxContainer input:checkbox').change(function () {
                if (this.checked) {
                    $(this).parent().find('.skillContainer input:checkbox').prop('checked', true);
                }
                else {
                    $(this).parent().find('.skillContainer input:checkbox').prop('checked', false);
                }
            });
            $('.skillContainer input:checkbox').each(function () {
                if ($(this).parent().find('input:checkbox:checked').length == $(this).parent().find('input:checkbox').length) {
                    $(this).parent().parent().find('.skillSubject').prop('checked', true);

                }
            });
            $('#login-trigger').click(function () {
                $(this).next('#login-content').slideToggle();
                $(this).toggleClass('active');

                if ($(this).hasClass('active')) $(this).find('span').html('&#x25B2;')
                else $(this).find('span').html('&#x25BC;')
            });
            $("input:radio[name=isTeacher]").change(function () {
                if ($(this).val() == 'True') {
                    $('.dissertationLink').css('display', 'block')
                }
                else {
                    $('.dissertationLink').css('display', 'none')
                }
            });

        });
        function skillsSave() {
            var searchIDs = $(".skillContainer input:checkbox:checked").map(function () {
                return $(this).val();
            }).get(); // <----
            var interestIds = $(".checkbox-areas input:checkbox:checked").map(function () {
                return $(this).val();
            }).get();
            $.ajax({
                type: "POST",
                url: "/Manage/SaveSkills",
                data: {

                    moduleIds: searchIDs,
                    interestsIds: interestIds
                },
                success: function () {
                    alert("Skills saved!");
                },
                error: function (data) {
                    alert("Error.");
                }
            });
        }
        function moduleFilter() {
            $('#skill-container').load("/Home/SkillPartial/?sId=" + $('#SubjectId').val()
                + '&mId=' + $('#ModuleId').val() + '&rId=59');
        }
