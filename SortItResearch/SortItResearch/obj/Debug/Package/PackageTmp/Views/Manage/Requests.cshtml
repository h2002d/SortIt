@model SortItResearch.Models.InviteModel
@{
    ViewBag.Title = "Requests";
}

<div class="subject-header-content">
    <div class="subject-header">
        <h3>Facilitator request</h3>
    </div>
</div>
@if (!Model.Accepted)
{
    <div align="center" class="row">
        <div class="col-md-12">
            <p>You have one incomming request from @ViewBag.Inviter.Name @ViewBag.Inviter.SurName</p>

            <input type="button" value="Accept" onclick="sendRequestApproval('@Model.Id',true)" class="btn btn-info" />
            <input type="button" value="Decline" onclick="sendRequestApproval('@Model.Id',false)" class="btn btn-default" />
        </div>
    </div>
}
else
{
    <div align="center" class="row">
        <div class="col-sm-12">
            <span style="font-size:30px;">The request already sent</span>
            <br />
            <span>return to <a href="~/">home</a> page</span>
        </div>
    </div>
}
