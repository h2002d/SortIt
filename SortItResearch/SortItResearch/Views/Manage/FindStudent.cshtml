@model List<SortItResearch.Models.UserProfile>


<table id="customers">
    <tr>
        <th>Name</th>
        <th>Affiliation</th>
        <th>Degree</th>
        <th>Profession</th>
        <th>Country</th>
        <th>Phone</th>
        <th></th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Name @user.SurName</td>
            <td>@user.Affiliation</td>
            <td>@user.Degree</td>
            <td>@user.Profession</td>
            <td>@user.Country</td>
            <td>@user.Phone</td>
            <td>
                @if (!user.isTeacher)
                {
                    <input type="button" value="Հաստատել" onclick="changeRole('@user.Id','Teacher')" />
                }
            </td>
        </tr>
    }
</table>