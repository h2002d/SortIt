@model SortItResearch.Models.UserProfile

@{
    ViewBag.Title = "ProfileInfo";
}
<div class="profileInfo-screen"></div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div align="center" class="form-horizontal profileInfo-content">
        <h4>UserProfile</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="col-md-12">
                <h2 style="color:white;">Լրացրեք ձեր անձնական տվյալները</h2>
                <hr />
                <p>Անուն</p>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-12">
                <p>Ազգանուն</p>
                @Html.EditorFor(model => model.SurName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SurName, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.DateBirth, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateBirth, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateBirth, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Պահպանել" class="btn btn-default" />
            </div>
        </div>
    </div>
}


